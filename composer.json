{
    "name": "bof/candidate-test-php",
    "description": "Simple test",
    "type": "project",
    "require": {
        "php": ">=7.0",
        "incenteev/composer-parameter-handler": "~2.0",

        "symfony/console": "^3.2",
        "symfony/finder": "^3.2",
        "symfony/dependency-injection": "^3.2",
        "symfony/config": "^3.2",
        "symfony/yaml": "^3.2",
        "doctrine/dbal": "^2.5"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Damjan Znidarsic",
            "email": "damjan.znidarsic@dlabs.si"
        },
        {
            "name": "Lukasz Zakrzewski",
            "email": "contact@lzakrzewski.com"
        }
    ],
    "require-dev": {
        "symfony/var-dumper": "^3.2",
        "phpunit/phpunit": "~6.0",
        "behat/behat": "~3.2",
        "friendsofphp/php-cs-fixer": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "BOF\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "static-analysis": "bin/php-cs-fixer fix --config-file=.php_cs",
        "setup-database": "bin/setup-database",
        "integration": "bin/phpunit --testsuite=integration",
        "acceptance": "bin/behat --out=std",
        "test": [
            "@static-analysis",
            "@setup-database",
            "@integration",
            "@acceptance"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "incenteev-parameters": {
            "file": "app/parameters.yml"
        }
    }
}
